@model List<LearningDotNet.Models.UserTask>

@{
  ViewBag.Title = "List";
}

<h2>List</h2>
<table class="table">
  <tr>
    <th>
      Description
    </th>
    <th>
      Status
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model) {
    <tr>
      <td>
        @Html.ActionLink(item.TaskName, "Edit", new { id = item.Id })
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Status.Description)
      </td>
    </tr>
  }

</table>
